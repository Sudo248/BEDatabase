<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/logIn">

    <fragment
        android:id="@+id/logIn"
        android:name="com.nhom2.bedatabase.presentation.fragments.log_in.LogIn"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logIn_to_signUp"
            app:destination="@id/signUp" />
        <action
            android:id="@+id/action_logIn_to_home2"
            app:destination="@id/home2" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.nhom2.bedatabase.presentation.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/splashActivity"
        android:name="com.nhom2.bedatabase.splash.SplashActivity"
        android:label="activity_splash"
        tools:layout="@layout/activity_splash" />
    <fragment
        android:id="@+id/home2"
        android:name="com.nhom2.bedatabase.presentation.fragments.home.Home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_home2_to_listVocabularyFragment"
            app:destination="@id/listVocabularyFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.nhom2.bedatabase.presentation.fragments.sign_up.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_home2"
            app:destination="@id/home2" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.nhom2.bedatabase.presentation.fragments.game.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_gamePlayFragment"
            app:destination="@id/gamePlayFragment" />
    </fragment>
    <fragment
        android:id="@+id/gamePlayFragment"
        android:name="com.nhom2.bedatabase.presentation.fragments.game.GamePlayFragment"
        android:label="fragment_game_play"
        tools:layout="@layout/fragment_game_play" />
    <fragment
        android:id="@+id/listVocabularyFragment"
        android:name="com.nhom2.bedatabase.presentation.fragments.vocabulary.ListVocabularyFragment"
        android:label="fragment_list_vocabulary"
        tools:layout="@layout/fragment_list_vocabulary" />
</navigation>